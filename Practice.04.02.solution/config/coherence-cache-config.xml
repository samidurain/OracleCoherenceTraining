<?xml version="1.0"?>

<!DOCTYPE cache-config SYSTEM "cache-config.dtd">

<cache-config>

  <caching-scheme-mapping>
    <cache-mapping>
      <cache-name>*</cache-name>
      <scheme-name>MyPartitionedScheme</scheme-name>
      <scheme-name>MyReplicatedScheme</scheme-name>
      
      
    </cache-mapping>
  </caching-scheme-mapping>
  
    <caching-schemes>
    <local-scheme>
      <scheme-name>MyLocalCachingScheme</scheme-name>
    </local-scheme>
    
    
      <distributed-scheme>
      <scheme-name>MyPartitionedScheme</scheme-name>
      

      <backing-map-scheme>
        <local-scheme>
          <scheme-ref>MyLocalCachingScheme</scheme-ref>
        </local-scheme>
      </backing-map-scheme>
         </distributed-scheme>
    
    
    <replicated-scheme>
      <scheme-name>MyReplicatedScheme</scheme-name>
      <service-name>Repl</service-name>



      <backing-map-scheme>
        <local-scheme>
          <scheme-ref>MyLocalCachingScheme</scheme-ref>
        </local-scheme>
      </backing-map-scheme>

      <autostart>true</autostart>
    </replicated-scheme>
    
  
      
    <invocation-scheme>
      <scheme-name>example-invocation</scheme-name>
      <service-name>InvocationService</service-name>

      <autostart system-property="tangosol.coherence.invocation.autostart">true</autostart>
    </invocation-scheme>
  </caching-schemes>

</cache-config>